<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.0;net20;net35;net40;net45</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Vanguard.snk</AssemblyOriginatorKeyFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.5.0-alfa</Version>
    <Authors>Veire Productions</Authors>
    <Company>Veire Productions</Company>
    <PackageLicenseUrl>https://github.com/jgveire/Vanguard/blob/master/License.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/jgveire/Vanguard/</PackageProjectUrl>
    <PackageIconUrl>https://jgveire.github.io/Vanguard/Vanguard.svg</PackageIconUrl>
    <RepositoryUrl>https://github.com/jgveire/Vanguard/</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Copyright>Copyright Veire Productions 2018</Copyright>
    <PackageTags>Guard Argument Parameter Validation</PackageTags>
    <Description>A simple guard library for validating method parameters without being a complete validation library.
This library makes it easy to validate method arguments in a uniform way.</Description>
    <PackageReleaseNotes>Guards now return the supplied value for shorter notation.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard1.0\Vanguard.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.0\Vanguard.xml</DocumentationFile>
  </PropertyGroup>

</Project>
