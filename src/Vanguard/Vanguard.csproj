<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.0;netstandard2.1</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Vanguard.pfx</AssemblyOriginatorKeyFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>5.1.0</Version>
    <Authors>Veire Productions</Authors>
    <Company>Veire Productions</Company>
    <PackageProjectUrl>https://github.com/jgveire/Vanguard/</PackageProjectUrl>
    <PackageIconUrl>https://jgveire.github.io/Vanguard/Vanguard.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/jgveire/Vanguard/</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Copyright>Copyright Veire Productions 2019</Copyright>
    <PackageTags>Guard Argument Parameter Validation</PackageTags>
    <Description>A simple guard library for validating method parameters without being a complete validation library.
This library makes it easy to validate method arguments in a uniform way.</Description>
    <PackageReleaseNotes>Breaking changes: argument guards now return a value. This will break package with old references.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard1.0\Vanguard.xml</DocumentationFile>
    <DocumentationFile>bin\Release\netstandard2.1\Vanguard.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.0\Vanguard.xml</DocumentationFile>
    <DocumentationFile>bin\Debug\netstandard2.1\Vanguard.xml</DocumentationFile>
  </PropertyGroup>

</Project>
